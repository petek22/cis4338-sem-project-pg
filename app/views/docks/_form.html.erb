<%= form_for(dock) do |f| %>
  <% if dock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(dock.errors.count, "error") %> -- Khhhaaaaaaannn!  Dock not saved!</h2>

      <ul>
      <% dock.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label 'Active' %>
    <%= f.check_box :available %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
